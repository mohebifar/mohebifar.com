---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Terminal">
  <div class="index-content framed">
    <h1 id="hello-there">Hello, I'm Mohamad Mohebifar</h1>
    <p>
      I'm a software developer with a passion for building tools that make programming better. 
      I work at <a href="https://codemod.com">Codemod</a> and contribute to open source projects like
      <a href="https://github.com/codemod/codemod">Codemod CLI</a> â€” tools for code transformation, 
      structural search, and automated refactoring.
    </p>
    <p>
      I'm also into running, biking, working out, and learning about history, philosophy, and ethics. And of course video games.
    </p>
  </div>
  
  <div class="posts">
    {posts.map((post) => <PostCard post={post} />)}
  </div>
</BaseLayout>